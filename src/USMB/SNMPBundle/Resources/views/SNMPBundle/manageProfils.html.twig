{# src/USMB/SNMPBundle/Resources/views/SNMPBundle/manageProfils.html.twig #}

{% extends "USMBSNMPBundle::layout.html.twig" %}

{% block activeManageProfiles %} active {% endblock %}

{% block body %}

    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">Profiles</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <a href="{{ path('usmbsnmp_manage_profile', { 'id': 'create' }) }}" class="btn btn-sm btn-outline-secondary"
               role="button"><span data-feather="plus"></span> Add profile</a>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">OID</th>
                <th scope="col">Type</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
            </thead>
            <tbody>
            {% for profile in profiles %}
                <tr>
                    <th scope="row">{{ profile.id }}</th>
                    <td class="vertMiddle">{{ profile.name }}</td>
                    <td class="vertMiddle">{{ profile.oid }}</td>
                    <td class="vertMiddle">{{ profile.type }}</td>
                    <td class="vertMiddle"><a href="{{ path('usmbsnmp_manage_profile', { 'id': profile.id }) }}"
                           class="btn btn-primary btn-sm"
                           role="button" ><span data-feather="edit-2"></span></a></td>
                    <td class="vertMiddle"><a href="{{ path('usmbsnmp_delete_profile', { 'id': profile.id }) }}"
                           class="btn btn-danger btn-sm"
                           role="button"
                           onclick="return confirm('Are you sure you want to delete this item?');"><span
                                    data-feather="trash-2"></span></a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}